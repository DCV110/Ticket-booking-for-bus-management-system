<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/seatContainer"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        android:background="@drawable/bg_seat_standard">

        <TextView
            android:id="@+id/tvSeatNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A1"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvVipLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIP"
            android:textSize="8sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="2dp" />

        <View
            android:id="@+id/seatIndicator"
            android:layout_width="16dp"
            android:layout_height="6dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_seat_standard"
            android:visibility="visible" />

    </LinearLayout>

    <View
        android:id="@+id/selectedIndicator"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_seat_pair_selected"
        android:visibility="gone" />

</FrameLayout>





